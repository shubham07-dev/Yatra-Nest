<%- layout("./layouts/boilerplate.ejs")%>
<div class="container mt-5">
  <div class="alert alert-success text-center shadow p-4">
    <h3>🎉 Booking Confirmed!</h3>
    <p>Your stay at <strong><%= listing.title %></strong> is confirmed.</p>
    <p>📅 From: <%= booking.startDate %> → <%= booking.endDate %></p>
    <p>💰 Total Paid: ₹<%= booking.price.totalCost %></p>
    <a href="/listing/<%= listing._id %>" class="btn btn-primary mt-3">Back to Listing</a>
  </div>
</div>